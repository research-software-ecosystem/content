    "biotoolsCURIE": "biotools:hapcut2",
    "biotoolsID": "hapcut2",
    "description": "HapCUT2 is a maximum-likelihood-based tool for assembling haplotypes from DNA sequence reads, designed to \"just work\" with excellent speed and accuracy across a range of long- and short-read sequencing technologies.\nThe output is in Haplotype block format described here: https://github.com/vibansal/HapCUT2/blob/master/outputformat.md",
    "editPermission": {
        "type": "private"
    },
    "function": [
        {
            "cmd": "extractHAIRS --bam input.bam --VCF input.vcf --out frags.dat\nHAPCUT2 --fragments frags.dat --VCF input.vcf --output haplotype.out",
            "input": [
                {
                    "data": {
                        "term": "Nucleic acid sequence alignment",
                        "uri": "http://edamontology.org/data_1383"
                    },
                    "format": [
                        {
                            "term": "BAM",
                            "uri": "http://edamontology.org/format_2572"
                        }
                    ]
                },
                {
                    "data": {
                        "term": "Sequence variations",
                        "uri": "http://edamontology.org/data_3498"
                    },
                    "format": [
                        {
                            "term": "VCF",
                            "uri": "http://edamontology.org/format_3016"
                        }
                    ]
                }
            ],
            "note": "Requires input data from a single diploid individual",
            "operation": [
                {
                    "term": "Haplotype mapping",
                    "uri": "http://edamontology.org/operation_0487"
                },
                {
                    "term": "Variant classification",
                    "uri": "http://edamontology.org/operation_3225"
                }
            ],
            "output": [
                {
                    "data": {
                        "term": "Haplotype map",
                        "uri": "http://edamontology.org/data_1863"
                    },
                    "format": [
                        {
                            "term": "plain text format (unformatted)",
                            "uri": "http://edamontology.org/format_1964"
                        }
                    ]
                },
                {
                    "data": {
                        "term": "Sequence variations",
                        "uri": "http://edamontology.org/data_3498"
                    },
                    "format": [
                        {
                            "term": "VCF",
                            "uri": "http://edamontology.org/format_3016"
                        }
                    ]
                }
            ]
        }
    ],
